<% comments.each do |comment| %>
  <div class="media comment">
      <a class="media-left" href="#">
        <%= image_tag("user_silhouette_generic.gif", :class => "profile-image") %>
      </a>
    <div class="media-body">
      <%= link_to comment.author.name, about_user_path(comment.author), class: "media-heading"%></a>
      <p class="text-muted"><%= comment.commented_on %></p>
      <p><%= comment.text %></p>
        <% unless comment_liked_by_current_user(comment, @comment_likes) %>
          <%= link_to "Like", like_photo_comment_path(p,comment) %></a>
        <% else %>
          <%= link_to "Unlike", unlike_photo_comment_path(p,comment) %></a>
        <% end %>
        <span class="text-muted"><%= comment.likes.size %> people like this</span>
      <% if comment.author == current_user %>
        <%= link_to "Delete", photo_comment_path(p, comment), method: "DELETE" ,class: "pull-right"%></a>
      <% end %>
    </div>
  </div>
<% end %>